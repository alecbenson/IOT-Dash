html
  head
    title #{title}
    block scripts
      script(src='/dist/vendor/js/vendor.js')
      link(rel='stylesheet', href='/dist/vendor/css/style.css')
      script(src='/dist/js/main.js')
  body(ng-app="iotdash", ng-controller="layoutController", ng-cloak)
    block navbar
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') #{title}
          #navbar-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/') Overview
              li
                a(href='/manage') Device Management
      block content
