#add-input-form.modal.fade(tabindex='-1', style='display: none;')
  .modal-dialog
    .modal-content
      form(ng-submit='postNewInput()')
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
          h3.modal-title Custom Input Source
        .modal-body
          .form-group.label-floating
            label.control-label Name
            input.form-control(type='text', placeholder='Custom Input Source', ng-model='newInput.name')
          .form-group.label-floating
            label.control-label Description
            input.form-control(type='text', placeholder='What does this input do?', ng-model='newInput.description')
          .form-group.label-floating
            label.control-label Request Type
            select.form-control(ng-init='newInput.requestType = methods[0]', ng-model='newInput.requestType', ng-options='m as m for m in methods')
          .form-group.label-floating
            label.control-label URL
            input.form-control(type='text', placeholder='What is the URL for the request?', ng-model='newInput.url')
          label(ng-show='newInput.params.length') Parameter(s)
            .form-group.form-group-sm(ng-repeat='input in newInput.params')
              div.row
                div.col-xs-6
                  input.form-control(type='text', placeholder='Key', ng-model='newInput.params[$index].key')
                div.col-xs-6
                  input.form-control(type='text', placeholder='Value', ng-model='newInput.params[$index].value')
        .modal-footer
          button.btn.btn-success(type='button', ng-click='addParameter()') Add Parameter
          button.btn.btn-primary(type='submit') Submit
