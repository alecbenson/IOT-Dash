#add-input-form.modal.fade(tabindex='-1', style='display: none;')
  .modal-dialog
    .modal-content
      form(ng-submit='postNewInput()')
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
          h3.modal-title Custom Input Source
        .modal-body
          .form-group.label-floating
            label.control-label Name
            input#i1.form-control(type='text', placeholder='Custom Input Source', ,='', ng-model='newInput.name')
          .form-group.label-floating
            label.control-label Description
            input#i2.form-control(type='text', placeholder='What does this input do?', ,='', ng-model='newInput.description')
          .form-group.label-floating
            label.control-label Request Type
            select#i3.form-control(ng-model='newInput.requestType')
              option GET
              option POST
              option PUT
          .form-group.label-floating
            label.control-label(for='i4') URL
            input#i4.form-control(type='url', placeholder='What is the URL for the request?', ,='', ng-model='newInput.url')
          label(ng-show='newInput.params.length') Parameter(s)
            .form-group.form-group-sm(ng-repeat='input in newInput.params')
              div.row
                div.col-xs-6
                  input.form-control(type='text', placeholder='Key', ng-model='newInput.params[$index].key')
                div.col-xs-6
                  input.form-control(type='text', placeholder='Value', ng-model='newInput.params[$index].value')
        .modal-footer
          button.btn.btn-success(type='button', ng-click='addParameter()') Add Parameter
          button.btn.btn-primary(type='submit') Submit
