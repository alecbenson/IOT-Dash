extends layout

block content
  div(ng-controller="manageDeviceController")
    .card-deck-wrapper
      .card-deck(ng-repeat='device in devices')
        iot-device(device)

    a.btn.btn-info.btn-fab.btn-raised.btn-right-corner(data-toggle="modal", data-target="#add-device-form")
      i.material-icons add
      .ripple-container
    add-device-form
